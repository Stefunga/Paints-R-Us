from tkinter import *
import tkinter as tk
import tkinter.messagebox
import sqlite3
import time

#Connecting to Paints-R-Us Database
connection = sqlite3.connect('PaintsRUs.db')
cursor = connection.cursor()

#Initially creating the database && ADDITIONS TO PaintsRUs.db
